<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <!-- styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css">


    <link rel="stylesheet" href="http://localhost:5000/css/home.css" />

    <!-- add image icon -->
    <link rel="icon" type="image/ico" href="http://localhost:5000/img/title-icon/instagram-icon.jpg" />
    <style>
        .swiper-container {
            width: 100% !important;
            height: 450px;
        }

        .images img {
            width: 100% !important;
            height: 100% !important;
        }

        .last {
            margin-bottom: 120px;
        }

        @media(max-width:600px) {
            .swiper-container {
                width: 100% !important;
                height: 350px;
            }
        }

        @media(min-width:600px) {
            .swiper-container {
                width: 100% !important;
                height: 450px;
            }
        }

        @media(min-width:992px) {
            .swiper-container {
                width: 100% !important;
                height: 550px;
            }
        }

        @media(min-width:1200px) {
            .swiper-container {
                width: 100% !important;
                height: 600px;
            }
        }
    </style>
</head>

<body>

    <div class="continer">
        <!-- top-header -->
        <div class="top-header container-fluid">
            <div class="all-top-header">
                <div class="add-picture">
                    <a href="http://localhost:5000/user/<%=username%>/new-post"><img
                            src="http://localhost:5000/img/font-awesome/camera-sefid.png" alt=""></a>
                </div>
                <div class="send-and-text">
                    <div class="text-insta">
                        <a href="/">
                            <p>Instagram</p>
                        </a>
                    </div>
                    <div class="send-img">
                        <a href="./chat-room.html"><img src="http://localhost:5000/img/font-awesome/send-sefid.png"
                                alt=""></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- end of top-header -->

        <!-- body -->
        <div class="body">
            <% if(results.length > 0) { %>
            <% for(let res of results){ %>
            <div class="body-section">
                <div class="body-header container-fluid">
                    <div class="picture-and-text">
                        <a href="http://localhost:5000/user-page/<%=res.username%>"><img
                                src="http://localhost:5000/uploads/<%=res.profile_pic%>" alt=""></a>
                        <a href="http://localhost:5000/user-page/<%=res.username%>">
                            <p class="text"><%= res.username %></p>
                        </a>
                    </div>
                </div>
                <div class="body-content">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <% for(let pic of res.pic){ %>
                            <div class="images swiper-slide">
                                <img src="http://localhost:5000/uploads/<%=pic.path%>" alt="" />
                                <p class="caption"><%= res.pic.length %> / <%= pic.number %> </p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="footer container-fluid">
                    <div class="top-footer d-flex justify-content-between">
                        <div class="heart-comment-send mt-3">
                            <a class="heart" data-username="<%=res.username%>" data-id="<%=res.id%>">
                                <% if(res.user_liked == "true"){ %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="true"
                                    alt="">
                                <% } else { %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="false"
                                    alt="">
                                <% } %>
                            </a>
                            <a href="http://localhost:5000/<%=res.username%>/<%=res.id%>/comment" class="comment"><img
                                    src="http://localhost:5000/img/font-awesome/comment-sefid.svg" alt=""></a>
                        </div>
                    </div>
                    <div class="count-of-like">
                        <span>Count Of Like : </span> <span> <%= res.count_of_likes %></span>
                    </div>
                    <div class="accound-and-description">
                        <p><%= res.caption %></p>
                    </div>
                    <div class="tags">
                        <% for(let tag of res.tags){ %>
                        <a href="http://localhost:5000/search-tag/<%=tag%>"><%= tag %># </a><br />
                        <% } %>
                    </div>
                    <div class="footer-footer">
                        <div class="published-time">
                            <p> Created Post : <%= res.created_at %></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            <% } else { %>
            <h4 class="display-4 mt-4 text-center">No Following User</h4>
            <p class="text-center container"><a href="http://localhost:5000/search"
                    class="btn btn-primary text-white text-center btn-block">Search</a></p>
            <% } %>

        </div>
        <!-- end of body -->

        <div class="last"></div>

        <!-- footer-navbar -->
        <div class="footer-navbar d-flex justify-content-around">
            <a href="/user/<%=username%>/home" class="home"><img
                    src="http://localhost:5000//img/font-awesome/home-siah.png" alt=""></a>
            <a href="http://localhost:5000/search" class="search"><img
                    src="http://localhost:5000/img/font-awesome/search-sefid.png" alt=""></a>
            <a href="/user/<%=username%>/new-post" class="photo"><img
                    src="http://localhost:5000/img/font-awesome/plus-square-sefid.png" alt=""></a>
            <a href="/activity/<%=username%>" class="photo"><img
                    src="http://localhost:5000/img/font-awesome/heart-sefid.png" alt=""></a>
            <a href="http://localhost:5000/user/<%=username%>" class="personal"><img
                    src="http://localhost:5000/img/font-awesome/user-sefid.png" alt=""></a>
        </div>
        <!-- end of footer-navbar -->
    </div>

    <!-- scripts -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/swiper/js/swiper.min.js"></script>
    <script src="http://localhost:5000/js/home.js" type="text/javascript"></script>
    </script>
</body>

</html>