<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Show</title>

    <!-- styles -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/css/swiper.min.css">

    <!-- add image icon -->
    <link rel="icon" type="image/ico" href="http://localhost:5000/img/title-icon/instagram-icon.jpg" />


    <link rel="stylesheet" href="http://localhost:5000/css/home.css" />
    <style>
        .swiper-container {
            width: 100% !important;
            height: 450px;
        }

        .images img {
            width: 100% !important;
            height: 100% !important;
        }

        .last {
            margin-bottom: 120px;
        }
    </style>
</head>

<body>

    <div class="continer">
        <!-- body -->
        <div class="body">
            <div class="body-section">
                <div class="body-header container-fluid">
                    <div class="picture-and-text">
                        <a href="http://localhost:5000/user-page/<%= postt.username %>"><img
                                src="http://localhost:5000/uploads/<%= postt.profile_pic %>" alt=""></a>
                        <a href="http://localhost:5000/user-page/<%= postt.username %>">
                            <p class="text"> <%= postt.username %> </p>
                        </a>
                    </div>
                </div>
                <div class="body-content">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <% for(let result of postt.pictures){ %>
                            <div class="images swiper-slide">
                                <img src="http://localhost:5000/uploads/<%= result.path %>" alt="" />
                                <p class="caption"><%= result.number %>/<%=postt.pictures.length%></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="footer container-fluid">
                    <div class="top-footer mt-4 mb-4 d-flex justify-content-between">
                        <div class="heart-comment-send">
                            <a class="heart" data-username="<%=postt.username%>" data-id="<%=postt.post_id%>">
                                <% if(postt.user_liked == "true"){ %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="true"
                                    alt="">
                                <% } else { %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="false"
                                    alt="">
                                <% } %>
                            </a>
                            <a href="http://localhost:5000/<%=postt.username%>/<%=postt.post_id%>/comment"
                                class="comment"><img src="http://localhost:5000/img/font-awesome/comment-sefid.svg"
                                    alt=""></a>
                        </div>
                        <div class="bookmark">
                            <a data-username="<%=postt.username%>" data-id="<%=postt.post_id%>" class="book">
                                <% if(postt.bookmarked == "false"){ %>
                                <img alt="" data-black="false">
                                <% } else { %>
                                <img alt="" data-black="true">
                                <% } %>
                            </a>
                        </div>
                    </div>
                    <div class="count-of-like">
                        <span>Count Of Like : </span> <span> <%= postt.count_of_likes %></span>
                    </div>
                    <div class="accound-and-description">
                        <p><%= postt.caption %></p>
                    </div>
                    <div class="tags">
                        <% for(let tag of postt.tags) {%>
                        <a href="http://localhost:5000/search-tag/<%=tag%>"><%= tag %>#</a><br />
                        <% } %>
                    </div>
                    <div class="footer-footer">
                        <div class="published-time">
                            <p>Create Post : <%= postt.created_at %></p>
                        </div>
                    </div>
                </div>
            </div>

            <% for(let post of postf){ %>
            <div class="body-section">
                <div class="body-header container-fluid">
                    <div class="picture-and-text">
                        <a href="http://localhost:5000/user-page/<%= post.username %>"><img
                                src="http://localhost:5000/uploads/<%= post.profile_pic %>" alt=""></a>
                        <a href="http://localhost:5000/user-page/<%= post.username %>">
                            <p class="text"> <%= post.username %> </p>
                        </a>
                    </div>
                </div>
                <div class="body-content">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <% for(let result of post.pictures){ %>
                            <div class="images swiper-slide">
                                <img src="http://localhost:5000/uploads/<%= result.path %>" alt="" />
                                <p class="caption"><%= result.number %>/<%=post.pictures.length%></p>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="footer container-fluid">
                    <div class="top-footer mt-4 mb-4 d-flex justify-content-between">
                        <div class="heart-comment-send">
                            <a href="#" class="heart" data-username="<%=post.username%>" data-id="<%=post.post_id%>">
                                <% if(post.user_liked == "true"){ %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="true"
                                    alt="">
                                <% } else { %>
                                <img src="http://localhost:5000/img/font-awesome/heart-sefid.svg" data-black="false"
                                    alt="">
                                <% } %>
                            </a>
                            <a href="http://localhost:5000/<%=post.username%>/<%=post.post_id%>/comment"
                                class="comment"><img src="http://localhost:5000/img/font-awesome/comment-sefid.svg"
                                    alt=""></a>
                        </div>
                        <div class="bookmark">
                            <a data-username="<%=post.username%>" data-id="<%=post.post_id%>" class="book">
                                <% if(post.bookmarked == "false"){ %>
                                <img alt="" data-black="false">
                                <% } else { %>
                                <img alt="" data-black="true">
                                <% } %>
                            </a>
                        </div>
                    </div>
                    <div class="count-of-like">
                        <span>Count Of Like : </span> <span> <%= post.count_of_likes %></span>
                    </div>
                    <div class="accound-and-description">
                        <p><%= postt.caption %></p>
                    </div>
                    <div class="tags">
                        <% for(let tag of post.tags) {%>
                        <a href="http://localhost:5000/search-tag/<%=tag%>"><%= tag %>#</a><br />
                        <% } %>
                    </div>
                    <div class="footer-footer">
                        <div class="published-time">
                            <p>Create Post : <%= post.created_at %></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
        <!-- end of body -->
        <div class="last"></div>

        <!-- footer-navbar -->
        <div class="footer-navbar d-flex justify-content-around">
            <a href="http://localhost:5000/user/<%=username%>/home" class="home"><img
                    src="http://localhost:5000//img/font-awesome/home.png" alt=""></a>
            <a href="http://localhost:5000/search" class="search"><img
                    src="http://localhost:5000/img/font-awesome/search-sefid.png" alt=""></a>
            <a href="/user/<%=username%>/new-post" class="photo"><img
                    src="http://localhost:5000/img/font-awesome/plus-square-sefid.png" alt=""></a>
            <a href="/activity/<%=username%>" class="photo"><img
                    src="http://localhost:5000/img/font-awesome/heart-sefid.png" alt=""></a>
            <a href="/user/<%=username%>" class="personal"><img
                    src="http://localhost:5000/img/font-awesome/user-sefid.png" alt=""></a>
        </div>
        <!-- end of footer-navbar -->
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/swiper/js/swiper.min.js"></script>
    <script src="http://localhost:5000/js/home.js" type="text/javascript"></script>
</body>

</html>